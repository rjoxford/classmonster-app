<h1>Classes</h1>

<div class="container">
    {{!-- Groups --}}
    <div class="row">
        {{#each model as |group|}}
            <div class="col-sm">
                {{#link-to 'groups.group' group}}
                <div class="card">
                    <img class="card-img-top img-thumbnail" src="/assets/images/kids1.png" />
                    <div class="card-footer">{{group.name}}</div>
                </div>
                {{/link-to}}
            </div>

            {{!-- {{#button-link-large title=group.name picture="kids1.png"}}
            {{#link-to 'groups.group' group}}
                <h5>{{group.students.length}} Students</h5>
                        {{#if isDeleting}}
                        {{#button-with-modal text="Delete" addClass="btn-danger"}}
                            <h3>{{group.name}} will be permanently deleted.</h3>
                            <h3>Are you sure you wish to continue?</h3>
                            <button type="button" class="btn btn-danger" {{action "delete" group}}>Delete</button>
                        {{/button-with-modal}}
                    {{/if}}
            {{/link-to}}
            {{/button-link-large}} --}}
        {{/each}}
    </div>

    {{!-- Controls --}}
    <div class="row justify-content-center">

        <button class="btn btn-primary">Add a Class</button>

        {{#if isDeleting}}
        <button class="btn btn-success" {{action "togIsDeleting"}}>Done</button>
        {{else}}
        <button class="btn btn-danger" {{action "togIsDeleting"}}>Remove</button>
        {{/if}}
    </div>

</div>
