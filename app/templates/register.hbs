<h1>Join the cause!</h1>

<form id="register-form" class="form-horizontal col-md-offset-2 col-md-6">

    {{#forms/form-row label="Email Address"}}
        {{input id='identification' class="form-control" placeholder='Enter email address' value=identification}}
    {{/forms/form-row}}

    {{#forms/form-row label="Password"}}
        {{input id='password' class="form-control" placeholder='Enter Password' type='password' value=password}}
    {{/forms/form-row}}

    {{#forms/form-row label="Ttile"}}
        {{forms/select-title value=title}}
    {{/forms/form-row}}

    {{#forms/form-row label="Forename"}}
        {{input id='forename' class="form-control" placeholder='Forename...' value=forename}}
    {{/forms/form-row}}

    {{#forms/form-row label="Surname"}}
        {{input id='surname' class="form-control" placeholder='Surname' value=surname}}
    {{/forms/form-row}}

    {{#forms/form-row label="Username"}}
        {{input id='username' class="form-control" placeholder='Choose a Username' value=username}}
    {{/forms/form-row}}

    {{#forms/form-row label="School"}}
        {{#button-with-modal text="Find" addClass="btn btn-primary" showCancel=true}}
            {{input class="form-control" placeholder='Choose a Username' value=username}}
            <p>Your chosen school will pop up here...</p>
            <p>or here...</p>
            <p>or here...</p>
        {{/button-with-modal}}
    {{/forms/form-row}}



    <div class="col-sm-offset-2 col-sm-10">
        <button class="btn btn-success" type="submit">Join</button>
        {{#if errorMessage}}
        <p>{{errorMessage}}</p>
        {{/if}}
    </div>
</form>
