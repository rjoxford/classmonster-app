
<h1>Login</h1>

<form class="form" {{action 'authenticate' on='submit' }}>

    {{!-- Email --}}
    {{#forms/form-row label="Password"}}
        {{input id='email' class="form-control col-md-6" placeholder='Enter Email address...' value=email}}
    {{/forms/form-row}}

    {{!-- Password --}}
    {{#forms/form-row label="Password"}}
        {{input id='password' class="form-control col-md-6" placeholder='Enter Password...' type='password' value=password}}
    {{/forms/form-row}}


    <div class="row justify-content-center">
        <button class="btn btn-primary">Login</button>
    </div>
    {{#if errorMessage}}
    <p>{{errorMessage}}</p>
    {{/if}}

</form>

<div class="col-lg-12">
    <h4>Not yet a member? Join the cause!</h4>
    {{#link-to 'register'}}<button class="btn btn-success">Sign up</button>{{/link-to}}
</div>


<h3>Test below:</h3>

<div class="row">

    {{#each users as |user|}}
    <div class="col-3">
        <div {{action 'login' user}} class="card">
            <div class="card-header">
                {{user.username}}
            </div>
            <div class="card-body">
                <p class="card-text">{{user.forename}} {{user.surname}}</p>
                <p class="card-text">{{user.email}}</p>
            </div>
        </div>
    </div>
    {{/each}}

</div>
