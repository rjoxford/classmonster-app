<h1>{{model.name}}</h1>
{{#link-to 'schemes.scheme.edit' }}<button class="btn btn-primary">Edit</button>{{/link-to}}
{{!-- Card for Each Unit --}}
<div class="row">
    {{#each model.units as |unit|}}
    {{!-- TODO - make this a component for displaying objectives in an accordion --}}
    <div class="col-lg-6">
        <div class="card">
            <div class="card-block">
                <h4 class="card-title">Unit 4</h4>
                <p class="card-text">{{unit.name}}</p>
            </div>
            <div class="card-footer">
                {{#each unit.objectives as |objective|}}
                    {{#link-to 'objectives.objective' objective}}<p class="scheme-objective">{{objective.name}}</p>{{/link-to}}
                {{/each}}
            </div>
        </div>
    </div>
    {{/each}}
</div>


