<h1>Schemes</h1>
<div class="container-fluid">

{{#tab-set}}
    {{tab-single title="School Schemes" deselector=deselector selected=true}}
    {{tab-single title="Personal Schemes" deselector=deselector}}
{{/tab-set}}

    {{!-- My School Schemes --}}
    <div class="row justify-content-center">

        {{#each model as |scheme|}}
            <div class="col-12 col-sm-6 col-md-3">
                {{#link-to 'schemes.scheme' scheme}}
                <div class="card">
                    <img class="card-img-top img-thumbnail" src="/assets/images/books/redbook.png" />
                    <div class="card-footer">{{scheme.name}}</div>
                </div>
                {{/link-to}}
            </div>
        {{/each}}
    </div>

    {{!-- My Personal Schemes --}}



    {{!-- {{#modal-basic}}
    <span>What's the aim of the game?</span>
    {{/modal-basic}} --}}


    {{!-- Adding and Removing Schemes controls --}}
    <div class="row justify-content-center">

        {{!-- Add a scheme --}}
        {{#button-with-modal addClass="btn-success" text="Add a Scheme" submit=(action "createNewScheme") }}
            <h3>Name your new scheme</h3>
            {{input value=newSchemeName}}
        {{/button-with-modal}}

        {{!-- Remove a scheme --}}
        {{#button-with-modal addClass="btn-warning" text="Remove a Scheme" submit=(action "createNewScheme") }}
            <h3>Remove a scheme</h3>
            {{input value=newSchemeName}}
        {{/button-with-modal}}

    </div>
</div>
