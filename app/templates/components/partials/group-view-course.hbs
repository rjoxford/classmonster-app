<h3>Objectives</h3>
<table class="table table-hover width100">
    <tbody>
        <tr>
            <th>Level</th>
            <th>Area</th>
            <th>Objective</th>
            <th colspan="3">Average Score</th>
        </tr>
        {{#each selectedUnit.objectives as |objective|}}
        <tr>
            <td>{{color/level-color level=objective.level}}</td>
            <td>{{objective.area}}</td>
            <td>{{objective.name}}</td>
            <td>{{scores/objective-average-score group=model objective=objective}}</td>
            <td>{{#link-to 'objectives.objective' objective}}<button class="btn btn-primary">Resources</button>{{/link-to}}</td>
            <td>{{#link-to 'groups.group.seating-plan'}}<button class="btn btn-success">Assess</button>{{/link-to}}</td>
            {{!-- <td>{{#link-to 'groups.group.seating-plan' (query-params objective=objective)}}<button class="btn btn-success">Reassess</button>{{/link-to}}</td> --}}
        </tr>
        {{/each}}
    </tbody>
</table>
