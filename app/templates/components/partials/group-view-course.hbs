            <h5>{{selectedUnit.name}}</h5>
            {{#button-with-modal text="Change" addClass="btn btn-default"}}
                <div class="row fluid">
                    {{#each units as |unit|}}
                        <div class="card col-sm-4 col-md-3 col-lg-2">
                            <div {{action 'setCurrentUnit' unit}} class="card-block">
